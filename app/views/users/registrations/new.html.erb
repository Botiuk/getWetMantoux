<h4><%= t('.sign_up') %></h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field pb-2">
    <%= f.label :phone, t('.phone') %><br />
    <%= f.telephone_field :phone, autofocus: true, placeholder: "+380901234567" %>
  </div>

  <div class="field pb-2">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> <%= t('.characters_min') %>)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field pb-2">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit t('.sign_up'), class: "btn btn-outline-success" %>
    <%= link_to t('navigation.login'), new_user_session_path, class: "btn btn-outline-primary ms-2" %>
  </div>
<% end %>
