<div class="row mb-2"> 
    <div class="col"><h4><%= t('.title') %></h4></div>
    <% if can? :create, Doctor %>
        <div class="col text-end">
            <%= link_to t('button.add.doctor'), new_doctor_path, :method => :post, class: "btn btn-outline-success" %>
        </div>
    <% end %>
</div>

<div class="row">
    <% @doctors.each do |doctor| %>
        <%= render doctor %>
    <% end %>
</div>

<% if @pagy.pages > 1 %>
    <div class="d-flex justify-content-center">
        <%== pagy_bootstrap_nav(@pagy) %>
    </div>
<% end %>