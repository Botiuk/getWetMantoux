<%= form_with(model: review) do |form| %>
    <% if review.errors.any? %>
        <div style="color: red">
        <h2><%= t 'forms.messages.errors', count: review.errors.count %></h2>

        <ul>
            <% review.errors.each do |error| %>
            <li><%= error.full_message %></li>
            <% end %>
        </ul>
        </div>
    <% end %>

    <div class="row g-3">

        <div>
            <%= form.hidden_field :doctor_id %>
        </div>

        <% if can? :create, Review %>
            <div class="col-md-2">
                <%= form.label :review_date, t('.review_date'), style: "display: block" %>
                <%= form.date_field :review_date, min: Date.today, max: (Date.today + 7), class: "form-control" %>
            </div>
        <% end %>

        <% if can? :update, review %>
            <div class="field">
                <%= form.label :recomendation, t('.recomendation'), style: "display: block" %>
                <%= form.rich_text_area :recomendation %>
            </div>

            <div class="fw-bold text-danger"><%= t('.close_review') %></div>
        <% end %>

        <div>
            <%= form.button nil, class: "btn btn-outline-success" do %>
                <%= t('button.submit') %>
            <% end %>
        </div>

    </div>

<% end %>
